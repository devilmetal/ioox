<!-- ======================================================================
                              Tutorial site's skin
     ======================================================================= -->
<skin xmlns="http://oppidoc.com/oppidum/skin">
    <handler name="msg-or-err">
        <predef module="oppidum">flash</predef>
    </handler>
    <profile name="standard" type="mesh">
        <!-- Bootstrap framework -->
        <link href="bootstrap/css/bootstrap.min.css"/>
        <link href="bootstrap/css/bootstrap-responsive.min.css"/>
        <!-- gebo blue theme-->
        <link href="css/blue.css" id="link_theme"/>
        <!-- breadcrumbs-->
        <link href="lib/jBreadcrumbs/css/BreadCrumb.css"/>
        <!-- tooltips-->
        <link href="lib/qtip2/jquery.qtip.min.css"/>
        <!--  code prettify -->
        <link href="lib/sticky/sticky.css"/>
        <!--  notifications -->
        <link href="lib/google-code-prettify/prettify.css"/>
        <!--  splashy icons -->
        <link href="img/splashy/splashy.css"/>
        <!--  colorbox -->
        <link href="lib/colorbox/colorbox.css"/>
        <!--  main styles -->
        <link href="css/style.css"/>
        <link href="http://fonts.googleapis.com/css?family=PT+Sans"/>
        
        <predef module="oppidum" avoid="error()">axel-1.3</predef>
    </profile>

    <profile name="standard2" type="mesh">
        <link href="css/base.css"/>
        <predef module="oppidum" avoid="error()">axel-1.3</predef>
    </profile>
    <profile name="editor">
        <link href="css/base.css"/>
        <predef module="oppidum" avoid="error()">axel-1.3</predef>
    </profile>
    <profile name="login">
        <!-- Bootstrap framework -->
        <link href="bootstrap/css/bootstrap.min.css"/>
        <link href="bootstrap/css/bootstrap-responsive.min.css"/>
        <!-- gebo blue theme-->
        <link href="css/blue.css" id="link_theme"/>
        <!-- breadcrumbs-->
        <link href="lib/jBreadcrumbs/css/BreadCrumb.css"/>
        <!-- tooltips-->
        <link href="lib/qtip2/jquery.qtip.min.css"/>
        <!--  code prettify -->
        <link href="lib/sticky/sticky.css"/>
        <!--  notifications -->
        <link href="lib/google-code-prettify/prettify.css"/>
        <!--  splashy icons -->
        <link href="img/splashy/splashy.css"/>
        <!--  colorbox -->
        <link href="lib/colorbox/colorbox.css"/>
        <!--  main styles -->
        <link href="css/style.css"/>
        <link href="http://fonts.googleapis.com/css?family=PT+Sans"/>
        
        <predef module="oppidum" avoid="error()">axel-1.3</predef>
    </profile>

</skin>
